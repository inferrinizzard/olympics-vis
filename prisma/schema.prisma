generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}
model Country {
  code      String @id @unique @db.String(3)
  name      String @db.String(50)
  status    String
	page_name String

  //#country_medals CountryMedals[]
  //#country_sports_medals CountrySportsMedals[]
  //#country_attendance CountryAttendance?
  //#medal_totals   MedalTotals[]

  @@map("country_detail")
}






model Games {
  code         String @id @unique @db.String(50)
  year         Int
  host         String @db.String(50)
  season       String @db.String(6)
  edition      String @db.String(20)
  motto        String?
  num_athletes Int?
  start_date   String?
  end_date     String?
	page_name    String?

  //#country_athletes   CountryAthletes[]
  //#country_medals     CountryMedals[]
  //#sports_events      SportsEvent[]

  @@map("games_detail")
}


model Sport {
  code      String @id @db.String(5)
  name      String @db.String(30)
  category  String @db.String(15)
  parent    String @db.String(5)
  status    String @db.String(15)
  season    String @db.String(6)
  page_name String

	@@unique([code, category])

  @@map("sports_detail")
}


